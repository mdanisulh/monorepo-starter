{
  "source": [
    "package.json",
    "packages/*/package.json",
    "apps/*/package.json"
  ],
  "versionGroups": [
    {
      "label": "Use workspace protocol when developing local packages",
      "dependencies": [
        "$LOCAL"
      ],
      "dependencyTypes": [
        "prod",
        "dev",
        "peer"
      ],
      "pinVersion": "workspace:*"
    }
  ],
  "semverGroups": [
    {
      "range": "^",
      "dependencyTypes": [
        "prod",
        "dev",
        "peer"
      ],
      "dependencies": [
        "**"
      ],
      "packages": [
        "**"
      ]
    }
  ]
}
