{
  "name": "monorepo",
  "version": "0.0.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@commitlint/cli": "^20.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "czg": "^1.12.0",
    "lefthook": "^2.0.1",
    "nx": "^22.0.1",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "packageManager": "bun@1.2.4",
  "private": true,
  "scripts": {
    "add-shadcn-component": "nx run @monorepo/ui:add-shadcn-component --",
    "build": "nx run-many -t build",
    "check": "biome check",
    "check:fix": "biome check --write",
    "clean": "nx reset && nx exec -- bun clean && git clean -xdf node_modules",
    "commit": "czg -S -s",
    "dev": "nx run-many -t dev --parallel",
    "format": "biome format",
    "format:fix": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "sort-package-json": "syncpack format",
    "start": "nx run-many -t start",
    "typecheck": "nx run-many -t typecheck"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
