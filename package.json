{
  "name": "monorepo",
  "version": "0.0.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@commitlint/cli": "^20.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "czg": "^1.12.0",
    "lefthook": "^2.0.1",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "packageManager": "bun@1.2.4",
  "private": true,
  "scripts": {
    "add-shadcn-component": "turbo add-shadcn-component --filter=@monorepo/ui --",
    "build": "turbo build",
    "check": "biome check",
    "check:fix": "biome check --write",
    "clean": "turbo clean && git clean -xdf .turbo node_modules",
    "commit": "czg -S -s",
    "dev": "turbo dev",
    "format": "biome format",
    "format:fix": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "sort-package-json": "syncpack format",
    "start": "turbo start",
    "typecheck": "turbo typecheck",
    "workspaces": "turbo workspaces workspaces:root --continue --concurrency=1 -- ",
    "workspaces:root": "bun"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
